<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Listenr.MainPageView" 
             Title="{Binding Title}">
    <Grid
        ColumnDefinitions="*"
        RowDefinitions="400,*,100">
        <CollectionView
            Grid.Row="0"
            BackgroundColor="AliceBlue">
        </CollectionView>

        <Label
            Grid.Row="1"
            BackgroundColor="BlanchedAlmond"
            Text="Выкачай аудио из любого youtube видео">
        </Label>

        <Button 
            Grid.Row="2"
            Text="hello there" 
            Grid.Column="0"
            Command="{Binding GoToYoutubeLinkViewCommand}"
            Margin="8"/>
    </Grid>
</ContentPage>
